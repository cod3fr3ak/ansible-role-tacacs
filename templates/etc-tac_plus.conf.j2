# --- Global Settings --- #

accounting syslog
accounting file = /var/log/tacacs_acct.log
key = "{{ tacacs_key }}"


# --- Network Access Servers --- #

# Cisco 2911s
host = 10.255.255.26 { key = "{{ c2911_key }}" }
host = 10.255.255.27 { key = "{{ c2911_key }}" }

# Cisco Catalyst 2960s
host = 192.168.40.241 { key = "{{ c2960_key }}" }
host = 192.168.40.242 { key = "{{ c2960_key }}" }
host = 192.168.40.243 { key = "{{ c2960_key }}" }
host = 192.168.40.244 { key = "{{ c2960_key }}" }
host = 192.168.40.245 { key = "{{ c2960_key }}" }
host = 192.168.40.246 { key = "{{ c2960_key }}" }

# Cisco Catalyst 3750
host = 10.255.255.10 { key = "{{ c3750_key }}" }

## Cisco Firewalls
# An enable password must be set for the firewalls
# Use tac_pwd to generate a des encrypted password string
#
{% for item in tacacs_enable_passwords %}
host = {{ item.name }} { enable = {{ item.auth_mechanism }} {{ item.password}} }
{% endfor %}


# --- ACLs --- #

# All network devices
acl = all {
    permit = .*
}

# Access layer switches
acl = access_switches {
    # All C2960 switches
    permit = 192\.168\.40\.24[1-7]
}


# --- Groups --- #

group = enterprise_admin {
    default service = permit
    login = PAM
    acl = all

    # Default login exec level
    service = exec {
      priv-lvl = 15
    }
}

group = access_admin {
    default service = deny
    login = PAM
    acl = access_switches

    # Default login exec level
    service = exec {
      priv-lvl = 15
    }

    # Basic commands
    cmd = enable { permit .* }
    cmd = exit { permit .* }
    cmd = end { permit .* }
    cmd = configure { permit .* }

    # Group specific commands
    cmd = show {
        permit int.*
        permit ip.*
        permit priv.*
        permit running-config
    }

    cmd = interface {
        # Don't allow modification of trunk links
        deny "GigabitEthernet [0-9]/[0-9]/(49|50|51|52)"
        deny "FastEthernet [0-9]/[0-9]/(49|50|51|52)"

        permit "FastEthernet.*"
        permit "GigabitEthernet.*"
    }

    cmd = switchport  {
        permit "access vlan.*"
        permit "mode access"
    }

    cmd = description {
        permit .*
    }

    cmd = no {
        permit shutdown
        permit "switchport mode access"
    }

    cmd = shutdown { permit .* }

    cmd = do {
        permit "sh(ow)? (int(erface)?|ip|priv(ilege)?|run(ning-config)?).*"
        permit "switchport (access vlan|mode access).*"
        permit "desc(ription).*"
    }
}

group = reader {
    default service = deny
    login = PAM
    acl = all

    # Default login exec level
    service = exec {
      priv-lvl = 1
    }

    # Basic commands
    cmd = enable { permit .* }
    cmd = exit { permit .* }
    cmd = end { permit .* }

    # Group specific commands
    cmd = show {
        permit .*
    }
}

group = scanner {
    default service = deny
    login = PAM
    acl = all

    # Default login exec level
    service = exec {
      priv-lvl = 15
    }

    # Basic commands
    cmd = enable { permit .* }
    cmd = exit { permit .* }
    cmd = end { permit .* }

    # Group specific commands
    cmd = show { permit .* }
    cmd = dir { permit .* }
    cmd = write { permit term }
    cmd = terminal { permit (length|width) }
    cmd = more { permit .* }
}



# --- Users --- #
{% for item in tacacs_users %}
user = {{ item.name }} {
    login = PAM
    member = {{ item.config_group }}
{% if item.expires is defined %}
    expires = "{{ item.config_expires }}"
{% endif %}
}
{% endfor %}
