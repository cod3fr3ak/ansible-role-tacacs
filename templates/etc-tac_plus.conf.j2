# User account configured for use with "rancid"
user = rancid {
    login = PAM
    service = exec {
        priv-lvl = 15
    }

    cmd = show { permit .* }
    cmd = exit { permit .* }
    cmd = dir { permit .* }
    cmd = write { permit term }

}
